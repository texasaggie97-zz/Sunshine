<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_forecast_today"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="@color/sunshine_blue"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_col_left"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="60dp"
        android:gravity="left"
        >

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sunshine_white"
            android:textAppearance="?android:textAppearanceLarge"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/list_item_date_textview"
            />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sunshine_white"
            android:textSize="72sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/list_item_high_textview"
            />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sunshine_white"
            android:fontFamily="sans-serif-light"
            android:textSize="36sp"
            android:id="@+id/list_item_low_textview"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_col_right"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="wrap_content"
                android:contentDescription="@string/default_icon_content_description"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_icon"
                />
        </FrameLayout>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sunshine_white"
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/list_item_forecast_textview"
            android:fontFamily="sans-serif-condensed"
            />

    </LinearLayout>

</LinearLayout>
